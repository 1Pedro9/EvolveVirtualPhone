<UserControl x:Class="PhoneVM.View.MainWindow.calculator_container"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PhoneVM.View.MainWindow"
             mc:Ignorable="d" 
            d:DesignHeight="80" d:DesignWidth="80">
    <Border
        Style="{StaticResource AppStyle}"
        Background="Bisque"
        >
        <Button
            Style="{StaticResource AppStyleButton}" Click="Button_Click"
            >
            <Image Source="pack://application:,,,/Images/calculator.png"/>
        </Button>
    </Border>
</UserControl>
